<div class="container mx-auto px-4 py-8">
  <!-- Test element to verify Tailwind is working -->
  <%# <div class="bg-blue-500 text-white p-4 rounded mb-4">
    âœ… If you see this blue box, Tailwind is working!
  </div> %>
  
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">NBA Over/Under Teams</h1>
  
  <div class="overflow-x-auto shadow-lg rounded-lg">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Team Name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Wins
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Losses
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Over/Under Line
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Projected Wins
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @teams.each_with_index do |team, index| %>
          <tr class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= team.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= team.wins %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= team.losses %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= team.over_under_line %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= team.projected_wins %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
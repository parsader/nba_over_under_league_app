<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-2xl font-bold text-gray-800">Create New League</h1>
      <%= link_to "← Back", leagues_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
      <%= form_with model: @league, local: true, class: "space-y-6" do |f| %>
        <% if @league.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded p-4">
            <h3 class="text-red-800 font-medium">Please fix these errors:</h3>
            <ul class="text-red-700 text-sm mt-2 space-y-1">
              <% @league.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "League Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, 
              placeholder: "e.g. Friends NBA League", 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="font-medium text-gray-700 mb-2">League Settings</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>• Maximum 6 users per league</li>
            <li>• Maximum 10 picks per user</li>
            <li>• Free-for-all picking (no draft order)</li>
            <li>• Each team can only be picked once</li>
          </ul>
        </div>

        <div class="flex space-x-4">
          <%= f.submit "Create League", 
              class: "flex-1 bg-green-500 hover:bg-green-600 text-white font-medium py-3 px-4 rounded-lg transition duration-200" %>
          <%= link_to "Cancel", leagues_path, 
              class: "flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-3 px-4 rounded-lg text-center transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>